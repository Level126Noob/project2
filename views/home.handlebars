<article class="wrap">
    <header>
        <h1>ART Cloud</h1>
    </header>
        <nav>
             <form id="search" action="#">
                <input type="text" id="searchInput" name="myInput" onkeypress="handle" placeholder="Find...">
                <button id="searchButton">Search</button>
            </form>
        </nav>
        <aside>
            <h1>Options</h1>
            
            <div class="switch-field">
                <a href="/home"id="radio-three" class="newest"><img src="../assets/imgs/up.svg"></a>
                <a href="/descending" id="radio-five" class="oldest"><img src="../assets/imgs/down.svg"></a>
            </div>

            <div class="custom-select">
                <select class="custom-select">
                    <option value="0">.txt</option>
                    <option value="1">.mp4</option>
                    <option value="2">.pdf</option>
                    <option value="3">.mp3</option>
                    <option value="4">.exe</option>
                    <option value="5">.html</option>
                    <option value="6">.css</option>
                    <option value="7">.js</option>
                </select>
            </div>

